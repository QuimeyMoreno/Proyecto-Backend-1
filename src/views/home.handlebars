<h1>Lista de Productos</h1>

{{#each products.docs}}
<div>
    <h2>{{this.title}}</h2>
    <p>{{this.description}}</p>
    <p>Price: ${{this.price}}</p>
    <p>Category: {{this.category}}</p>
    <button type="submit">Agregar al carrito</button>   
</div>
<hr>
{{/each}}

<div>
    {{#if hasPrevPage}}
        <a href="/?page={{prevPage}}&limit=3">Anterior</a>
    {{/if}}

    {{#if hasNextPage}}
        <a href="/?page={{nextPage}}&limit=3">Siguiente</a>
    {{/if}}
</div>

